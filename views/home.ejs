
<%- include("partials/header") -%>
<h1>Home</h1>
<p>
    <%= homeContent %>
</p>
<p>
    <% postList.forEach(function(post){ %>
        <% myString = post.postContent %>
        <% truncString = myString.substring(0,99) + "..." %>
        <h1><%= post.title %></h1>
        <p>
            <%= truncString %>
            <a href="/posts/<%= post._id %>">Read More</a>
        </p>
        
    <% }) %>
</p>
<a href="/compose">
    <button class="btn btn-primary post-btn" type="button" name="submitBtn">Create a Post</button>
</a>
<%- include("partials/footer") -%>